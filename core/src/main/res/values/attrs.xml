

<resources>

    <!-- Override primary color.   -->
    <attr name="ndDialogPrimaryColor" format="color" />

    <!-- Override highlight color. Default: Generates color from sheetPrimaryColor or colorPrimary..   -->
    <attr name="ndDialogHighlightColor" format="color" />

    <!-- Override background color. -->
    <attr name="ndDialogBackgroundColor" format="color" />

    <!-- Override the divider color. -->
    <attr name="ndDialogDividerColor" format="color" />

    <!-- Override color of action icons.  -->
    <attr name="ndDialogIconsColor" format="color" />

    <!-- Override default corner radius.  -->
    <attr name="ndDialogCornerRadius" format="dimension" />

    <!-- Override default corner family.  -->
    <attr name="ndDialogCornerFamily" format="enum">
        <enum name="rounded" value="0" />
        <enum name="cut" value="1" />
    </attr>

    <attr name="ndDialogDisplayCloseButton" format="boolean" />

    <attr name="ndDialogDisplayHandle" format="boolean" />

    <attr name="ndDialogDisplayToolbar" format="boolean" />

    <!-- Style for an option in OptionsSheet.  -->
    <declare-styleable name="NDDialogOption">

        <!-- Override icon color of an active option. Default: sheetPrimaryColor -->
        <attr name="ndDialogOptionSelectedImageColor" format="color" />

        <!-- Override text color of an active option. Default: sheetPrimaryColor -->
        <attr name="ndDialogOptionSelectedTextColor" format="color" />

        <!-- Override icon color of an disabled option. Default: sheetIconsColor, colorOnSurface -->
        <attr name="ndDialogOptionDisabledImageColor" format="color" />

        <!-- Override text color of an disabled option. Default: sheetContentColor, colorTextPrimary -->
        <attr name="ndDialogOptionDisabledTextColor" format="color" />

        <!-- Override background color of an disabled option. -->
        <attr name="ndDialogOptionDisabledBackgroundColor" format="color" />

    </declare-styleable>


    <!--  Style for the title.  -->
    <declare-styleable name="NDDialogTitle">

        <!-- Override title color. Default: sheetPrimaryColor -->
        <attr name="ndDialogTitleColor" format="color" />

        <!-- Override title font. -->
        <attr name="ndDialogTitleFont" format="reference" />

        <attr name="ndDialogTitleLineHeight" format="dimension" />

        <attr name="ndDialogTitleLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the content text.  -->
    <declare-styleable name="NDDialogContent">

        <!-- Override content text color. Default: textColorPrimary -->
        <attr name="ndDialogContentColor" format="color" />

        <!-- Override content text inverse color. Default: textColorPrimaryInverse -->
        <attr name="ndDialogContentInverseColor" format="color" />

        <!-- Override primary text font. -->
        <attr name="ndDialogContentFont" format="reference" />

        <!-- Override content text line height. -->
        <attr name="ndDialogContentLineHeight" format="dimension" />

        <!-- Override content text letter spacing. -->
        <attr name="ndDialogContentLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for value text. (Selected date, selected time, ...)  -->
    <declare-styleable name="NDDialogValue">

        <!-- Override value text color. Default: sheetPrimaryColor -->
        <attr name="ndDialogValueTextActiveColor" format="color" />

        <!-- Override value text font. -->
        <attr name="ndDialogValueFont" format="reference" />

        <!-- Override value text line height. -->
        <attr name="ndDialogValueLineHeight" format="dimension" />

        <!-- Override value text letter spacing. -->
        <attr name="ndDialogValueLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the digit keys of the numerical input.  -->
    <declare-styleable name="NDDialogDigit">

        <!-- Override digit key color. Default: textColorPrimary -->
        <attr name="ndDialogDigitColor" format="color" />

        <!-- Override digit key text font. -->
        <attr name="ndDialogDigitFont" format="reference" />

        <!-- Override digit key line height. -->
        <attr name="ndDialogDigitLineHeight" format="dimension" />

        <!-- Override digit key letter spacing. -->
        <attr name="ndDialogDigitLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the buttons.  -->
    <declare-styleable name="NDDialogButton">

        <!-- Override button color. Default: sheetPrimaryColor -->
        <attr name="ndDialogButtonColor" format="reference" />

        <!-- Override button text font. -->
        <attr name="ndDialogButtonTextFont" format="reference" />

        <!-- Override button letter spacing. -->
        <attr name="ndDialogButtonTextLetterSpacing" format="float" />

        <!-- Override radius of all corners.  -->
        <attr name="ndDialogButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="ndDialogButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override button width. Default: wrap_content  -->
        <attr name="ndDialogButtonWidth" format="enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_content" value="-1" />
        </attr>


        <!-- Override outlined button border color. -->
        <attr name="ndDialogButtonOutlinedButtonBorderColor" format="reference" />

        <!-- Override outlined button border width.  -->
        <attr name="ndDialogButtonOutlinedButtonBorderWidth" format="dimension" />

    </declare-styleable>

    <!--  Style for the buttons.  -->
    <declare-styleable name="NDDialogNegativeButton">

        <attr name="ndDialogNegativeButtonType" format="enum">
            <enum name="text_button" value="0" />
            <enum name="outlined_button" value="1" />
            <enum name="button" value="2" />
        </attr>

        <!-- Override outlined button border color. -->
        <attr name="ndDialogNegativeButtonOutlinedButtonBorderColor" format="reference" />

        <!-- Override outlined button border width.  -->
        <attr name="ndDialogNegativeButtonOutlinedButtonBorderWidth" format="dimension" />

        <!-- Override radius of all corners.  -->
        <attr name="ndDialogNegativeButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="ndDialogNegativeButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom left corner radius.  -->
        <attr name="ndDialogNegativeButtonBottomLeftCornerRadius" format="dimension" />

        <!-- Override bottom left corner family.  -->
        <attr name="ndDialogNegativeButtonBottomLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top left corner radius.  -->
        <attr name="ndDialogNegativeButtonTopLeftCornerRadius" format="dimension" />

        <!-- Override top left corner family.  -->
        <attr name="ndDialogNegativeButtonTopLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom right corner radius.  -->
        <attr name="ndDialogNegativeButtonBottomRightCornerRadius" format="dimension" />

        <!-- Override top bottom corner family.  -->
        <attr name="ndDialogNegativeButtonBottomRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top right corner radius.  -->
        <attr name="ndDialogNegativeButtonTopRightCornerRadius" format="dimension" />

        <!-- Override top right corner family.  -->
        <attr name="ndDialogNegativeButtonTopRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the buttons.  -->
    <declare-styleable name="NDDialogPositiveButton">

        <attr name="ndDialogPositiveButtonType" format="enum">
            <enum name="text_button" value="0" />
            <enum name="outlined_button" value="1" />
            <enum name="button" value="2" />
        </attr>

        <!-- Override outlined button border color. -->
        <attr name="ndDialogPositiveButtonOutlinedButtonBorderColor" format="reference" />

        <!-- Override outlined button border width.  -->
        <attr name="ndDialogPositiveButtonOutlinedButtonBorderWidth" format="dimension" />

        <!-- Override radius of all corners.  -->
        <attr name="ndDialogPositiveButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="ndDialogPositiveButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom left corner radius.  -->
        <attr name="ndDialogPositiveButtonBottomLeftCornerRadius" format="dimension" />

        <!-- Override bottom left corner family.  -->
        <attr name="ndDialogPositiveButtonBottomLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top left corner radius.  -->
        <attr name="ndDialogPositiveButtonTopLeftCornerRadius" format="dimension" />

        <!-- Override top left corner family.  -->
        <attr name="ndDialogPositiveButtonTopLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom right corner radius.  -->
        <attr name="ndDialogPositiveButtonBottomRightCornerRadius" format="dimension" />

        <!-- Override top bottom corner family.  -->
        <attr name="ndDialogPositiveButtonBottomRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top right corner radius.  -->
        <attr name="ndDialogPositiveButtonTopRightCornerRadius" format="dimension" />

        <!-- Override top right corner family.  -->
        <attr name="ndDialogPositiveButtonTopRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the handle.  -->
    <declare-styleable name="NDDialogHandle">

        <!-- Override handle width.  -->
        <attr name="ndDialogHandleWidth" format="dimension" />

        <!-- Override handle height.  -->
        <attr name="ndDialogHandleHeight" format="dimension" />

        <!-- Override handle fill color. -->
        <attr name="ndDialogHandleFillColor" format="reference|color" />

        <!-- Override handle border color. -->
        <attr name="ndDialogHandleBorderColor" format="reference" />

        <!-- Override handle border width.  -->
        <attr name="ndDialogHandleBorderWidth" format="dimension" />

        <!-- Override handle corner radius.  -->
        <attr name="ndDialogHandleCornerRadius" format="dimension" />

        <!-- Override handle corner family.  -->
        <attr name="ndDialogHandleCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the handle.  -->
    <declare-styleable name="NDDialogTextInputLayout">

        <!-- Override handle corner radius.  -->
        <attr name="ndDialogTextInputLayoutCornerRadius" format="dimension" />

        <!-- Override bottom left corner radius.  -->
        <attr name="ndDialogTextInputLayoutBottomLeftCornerRadius" format="dimension" />

        <!-- Override top left corner radius.  -->
        <attr name="ndDialogTextInputLayoutTopLeftCornerRadius" format="dimension" />

        <!-- Override bottom right corner radius.  -->
        <attr name="ndDialogTextInputLayoutBottomRightCornerRadius" format="dimension" />

        <!-- Override top right corner radius.  -->
        <attr name="ndDialogTextInputLayoutTopRightCornerRadius" format="dimension" />

        <!-- Override end icon color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="ndDialogTextInputLayoutEndIconColor" format="color" />

        <!-- Override helper text color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="ndDialogTextInputLayoutHelperTextColor" format="color" />

        <!-- Override box stroke color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="ndDialogTextInputLayoutBoxStrokeColor" format="color" />

        <!-- Override hint text color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="ndDialogTextInputLayoutHintTextColor" format="color" />

        <!-- Override box stroke error color.  -->
        <attr name="ndDialogTextInputLayoutBoxStrokeErrorColor" format="color" />

        <!-- Override error text color.  -->
        <attr name="ndDialogTextInputLayoutErrorTextColor" format="color" />

        <!-- Override error drawable color.  -->
        <attr name="ndDialogTextInputLayoutErrorDrawableColor" format="color" />

    </declare-styleable>

</resources>